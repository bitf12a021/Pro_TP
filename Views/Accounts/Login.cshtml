@{
    ViewBag.Title = "Login | Trip Pakistan";
}

<!-- ACCOUNT -->
<section class="section-account parallax bg-lg-7">
    <div class="awe-overlay"></div>
    <div class="container">
        <div class="login-register">
            <div class="text text-center">
                <h2>LOGIN ACCOUNT</h2>
                <p>Enter your account information in below fields.</p>
                <form action="#" class="account_form">
                    <div class="field-form">
                        <input type="text" class="field-text" placeholder="User name">
                    </div>
                    <div class="field-form">
                        <input type="password" class="field-text" placeholder="Password">
                        <span class="view-pass"><i class="hillter-icon-view"></i></span>
                    </div>
                    <div class="field-form field-submit">
                        <button class="awe-btn awe-btn-13">Login</button>
                    </div>
                    <span class="account-desc"><a href="/accounts/signup">I don’t have an account</a>  -  <a href="#">Forgot Password</a></span>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- END / ACCOUNT -->
